{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2019"],
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "dist/"
  },
  "include": ["**/*.ts"]
}
